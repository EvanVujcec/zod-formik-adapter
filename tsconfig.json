{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": ["ES2019"],
    "skipDefaultLibCheck": true
  },
  "include": ["./"],
  "exclude": [
    "node_modules",
    "samples",
    "tests"
  ]
}
